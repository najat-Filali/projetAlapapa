{% extends 'base.html.twig' %}

{% block title %}Bienvenue sur la pages de nos articles{% endblock %}

{% block body %}

    {%  for article in articles %} 
        <div class="jumbotron text-center hoverable p-4">
            <div class="row">
                <div class="col-md-4 offset-md-1 mx-3 my-3">
                    <!-- Featured image -->
                    <div class="view overlay">
                        <img src="https://mdbootstrap.com/img/Photos/Others/laptop-sm.jpg" class="img-fluid" alt="Sample image for first version of blog listing">
                        <a>
                            <div class="mask rgba-white-slight"></div>
                        </a>
                    </div>
                    
                </div>
 

                <div class="col-md-7 text-md-left ml-3 mt-3">
                    <!-- Excerpt -->
                    <a href="#!" class="green-text">
                        <h6 class="h6 pb-1"><i class="fas fa-desktop pr-1"></i>Categorie : {{ article.categorie }} </h6>
                    </a>
                    
                    <h4 class="h4 mb-4"><a href="{{path('article_view', {'id': article.id}) }}">        
                        {{article.titre | upper}}
                    </a></h4>
                    
                    <p class="font-weight-normal">{{ article.contenu}}</p>
                    <p class="font-weight-normal">by <a><strong>Hugo Gaspard</strong></a>{{article.date | date("d/m/Y h:i")}}</p>
                    
                    <a class="btn btn-success">Lire plus</a>
                    
                </div>           
            </div>           
        </div>
        
        {%  endfor %}
{% endblock %}
