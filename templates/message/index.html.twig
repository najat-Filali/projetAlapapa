{% extends 'base.html.twig' %}

{% block title %}Liste des Messages, Site Alapapa{% endblock %}

{% block body %}
    <h1>Message index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Objet</th>
                <th>Texte</th>
                <th>Date</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for message in messages %}
            <tr>
                <td>{{ message.id }}</td>
                <td>{{ message.objet }}</td>
                <td>{{ message.texte }}</td>
                <td>{{ message.date | date('d M yy') }} </td>
                <td>
                    <a type="button" class="btn btn-outline-info" href="{{ path('message_show', {'id': message.id}) }}">show</a>
                    <a type="button" class="btn btn-outline-info" href="{{ path('message_edit', {'id': message.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a type="button" class="btn btn-outline-info" href="{{ path('message_new') }}">Create new</a>
{% endblock %}
